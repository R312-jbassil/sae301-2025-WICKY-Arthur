---
const { actif } = Astro.props;
const options = [
    { label: "Toutes", value: "toutes" },
    { label: "Modèles de base", value: "base" },
    { label: "Générées par IA", value: "ia" },
];
---

<div class="flex flex-wrap justify-center gap-2 sm:gap-4 px-4 sm:px-8 my-4">
    {
        options.map((opt) => (
            <a
                href={`?filtre=${opt.value}`}
                class={`font-montserrat text-xs sm:text-sm btn btn-sm w-full sm:w-auto sm:min-w-[140px] min-h-[38px] sm:min-h-[42px] ${
                    actif === opt.value
                        ? "btn-primary text-white"
                        : "btn-outline"
                }`}
            >
                {opt.label}
            </a>
        ))
    }
</div>
