---
const { title, price, imageSrc, onCustomize } = Astro.props;
---

<div class="card w-72 bg-base-200 shadow-none rounded-none p-5">
    <figure class="mb-2 h-32 flex justify-center items-center">
        <img src={imageSrc} alt={title} class="h-28 object-contain" />
    </figure>
    <div class="card-body px-0 py-3">
        <h2 class="card-title font-montserrat text-lg font-normal mb-1">
            {title}
        </h2>
        <p class="text-[1.25rem] font-montserrat mb-2 font-normal">
            {price}&nbsp;€
        </p>
        <div class="flex items-center">
            <a
                href={onCustomize}
                class="underline hover:no-underline font-montserrat text-base transition text-black flex items-center gap-1"
            >
                Personnaliser <span class="ml-1">→</span>
            </a>
        </div>
    </div>
</div>
